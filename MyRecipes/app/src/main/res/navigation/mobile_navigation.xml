<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_recipes">

    <fragment
        android:id="@+id/navigation_recipes"
        android:name="ru.wladislavshcherbakov.myrecipes.RecipeListFragment"
        android:label="@string/recipes_list"
        tools:layout="@layout/fragment_recipe_list">

        <action
            android:id="@+id/action_recipeList_to_recipeDetail"
            app:destination="@id/recipeDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/navigation_add_recipe"
        android:name="ru.wladislavshcherbakov.myrecipes.AddRecipeFragment"
        android:label="@string/add_recipe"
        tools:layout="@layout/fragment_add_recipe" />

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="ru.wladislavshcherbakov.myrecipes.RecipeDetailFragment"
        android:label="@string/recipe_details"
        tools:layout="@layout/fragment_recipe_detail" />

</navigation>